body {
    margin: 0;
    padding: 0;
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #000; /* Pitch black background */
    color: #fff; /* White text color */
    font-family: 'Arial', sans-serif;
}

.center-content {
    text-align: center;
}

.title {
    font-size: 3rem; /* Size the text to make it stand out */
    letter-spacing: 0.1em; /* Add some letter spacing for style */
}
